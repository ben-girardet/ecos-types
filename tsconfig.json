{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "target": "ES2019",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDirs": [
            "./src",
            "./app",
        ],
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "declaration": true
    },
    "include": [
        "src/**/*"
    ]
}
